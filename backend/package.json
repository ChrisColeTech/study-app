{
  "name": "study-app-v3-backend",
  "version": "0.1.0",
  "description": "Study App V3 Backend Lambda Functions",
  "main": "dist/handlers/health.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "package": "npm run build && npm run bundle",
    "bundle": "esbuild src/handlers/*.ts --bundle --platform=node --target=node18 --outdir=dist/bundled --external:aws-sdk",
    "test:endpoints": "./scripts/test/test-all-endpoints.sh",
    "test:endpoints:auth": "./scripts/test/test-auth-endpoints.sh",
    "test:endpoints:providers": "./scripts/test/test-provider-endpoints.sh",
    "test:endpoints:exams": "./scripts/test/test-exam-endpoints.sh",
    "test:endpoints:topics": "./scripts/test/test-topic-endpoints.sh",
    "test:endpoints:sessions": "./scripts/test/test-session-endpoints.sh",
    "test:endpoints:questions": "./scripts/test/test-question-endpoints.sh",
    "test:endpoints:analytics": "./scripts/test/test-analytics-endpoints.sh",
    "test:endpoints:goals": "./scripts/test/test-goals-endpoints.sh",
    "test:endpoints:users": "./scripts/test/test-user-endpoints.sh",
    "local:start": "sam local start-api",
    "local:invoke": "sam local invoke"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless",
    "study-app",
    "nodejs",
    "typescript"
  ],
  "author": "Study App Team",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.6.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "esbuild": "^0.19.4",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.414.0",
    "@aws-sdk/client-s3": "^3.414.0",
    "@aws-sdk/lib-dynamodb": "^3.414.0",
    "@types/bcryptjs": "^2.4.6",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
